{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="form-login">
    <form method="post" action={{ path('app_register') }}>
        {% if error is defined %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
        <h1 class="h3 mb-3 font-weight-normal">Enter details to register</h1>
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
        <div class="mb-3">
            <label for="inputPassword" class="form-label">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" name="type" type="checkbox" value="admin" id="admin">
                <label class="form-check-label" for="admin">
                  Admin
                </label>
            </div>
        </div>
    
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
    
        <button class="btn btn-lg btn-primary" type="submit">
            Register
        </button>
    </form>
</div>
{% endblock %}
